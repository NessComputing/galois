#!/usr/bin/env ruby

$LOAD_PATH.unshift File.dirname(__FILE__) + '/../lib'

require 'galois'
require 'json'

conf_dir = ARGV[0] || "."
config = JSON.parse(File.open(conf_dir + "/galois.config").read, :symbolize_names  => true)

GaloisServer.start({:Host  => config[:server][:host], :Port  => config[:server][:port]})